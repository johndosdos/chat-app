package components

templ ReceiverBubble(message, from string) {
	<div hx-swap-oob="beforeend:#message-area">
		<div class="flex flex-col items-start">
			<div class="text-xs text-gray-500 dark:text-gray-400 mb-1 ml-3">{ from }</div>
			<div class="bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-100 p-3 rounded-2xl max-w-[80%] message-bubble shadow-sm">
				<p>{ message }</p>
			</div>
		</div>
	</div>
}

templ SenderBubble(message, from string) {
	<div hx-swap-oob="beforeend:#message-area">
		<div class="flex flex-col items-end">
			<div class="text-xs text-gray-500 dark:text-gray-400 mb-1 mr-3">{ from }</div>
			<div class="bg-gray-800 dark:bg-gray-500 text-white p-3 rounded-2xl max-w-[80%] message-bubble shadow-sm">
				<p>{ message }</p>
			</div>
		</div>
	</div>
}

templ MessageArea() {
	<div
		id="message-area"
		class="flex-1 p-4 overflow-y-auto space-y-4"
	></div>
}
